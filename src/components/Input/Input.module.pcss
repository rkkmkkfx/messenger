.root {
  width: 100%;
  height: 48px;
  padding: 16px;
  border-radius: 100px;
  color: var(--surface-dark);
  border: 2px solid var(--surface-dark);
  background-color: transparent;

  &:focus,
  &:not(:placeholder-shown) {
    outline: none;
    color: var(--primary-text);
    border-color: var(--primary-main);
  }

  &:invalid {
    border-color: var(--danger);
  }
}
