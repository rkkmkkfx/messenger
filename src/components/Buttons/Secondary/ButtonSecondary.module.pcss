.root {
  display: grid;
  place-items: center;
  height: 48px;
  padding: 0 16px;
  color: var(--primary-main);
  border: 2px solid var(--primary-main);
  border-radius: 100px;
  background: transparent;
  cursor: pointer;
  text-decoration: none;

  &:hover {
    border-color: var(--primary-dark);
    background-color: var(--primary-light);
    text-decoration: none;
  }
}
