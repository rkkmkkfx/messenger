.root {
  display: none;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.2);
  z-index: 999;

  &.visible {
    display: flex;
  }

  .card {
    max-width: fit-content;
    position: relative;
  }

  .close {
    position: absolute;
    top: 12px;
    right: 12px;
  }
}
