.root {
  display: grid;
  grid-gap: 18px;
  padding: 16px;
  min-width: 336px;
  width: 24vw;
  background: var(--surface);
  align-content: start;

  .user {
    margin: 8px 0;

    .avatar {
      display: flex;
      width: 72px;
      height: 72px;
      overflow: hidden;
      border-radius: 20px;
      background-color: var(--surface-dark);
      border: 2px solid transparent;

      &:hover {
        border-color: var(--primary-main);
      }
    }
  }
}
