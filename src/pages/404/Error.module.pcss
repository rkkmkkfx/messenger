.root {
  margin: auto;
  display: flex;
  align-items: center;
  flex-grow: 1;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  max-width: 336px;
  min-height: 250px;
  padding: 32px;
  border-radius: 24px;
  background-color: var(--surface);
  border: 1px solid var(--surface-dark);
  box-shadow: 0 16px 8px -8px #0002;

  .heading {
    margin-bottom: 20px;
  }
}
